{
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "42.0"
    }
  },

  "browser_action": {
    "default_icon": "icons/wiktionarek-32.png",
    "default_title": "Wiktionarek"
  },

  "content_security_policy": "script-src 'self' https://example.com; object-src 'self'",

  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "frame-trimmer.js", "frame-builder.js", "frame-init.js" ],
      "all_frames":  true
    }
  ],

  "background": {
    "scripts": [ "background.js" ]
  },

  "description": "Look up a word on Wiktionary with your customized layout just by clicking.",

  "icons": {
    "32":  "icons/wiktinarek-32.png",
    "48": "icons/wiktionarek-48.png",
    "96":  "icons/wiktionarek-96.png"
  },

  "manifest_version": 2,

  "name": "Wiktionarek",

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": [
    "webNavigation",
    "storage",
    "contextMenus",
    "activeTab",
    "https://en.wiktionary.org/api/rest_v1/page/html/*"
  ],

  "version": "0.1"
}
